{% comment %}
  Home page — High-End Editorial Fashion layout
{% endcomment %}

{%- assign hero_has_image = false -%}
{%- if section.settings.hero_image -%}
  {%- assign hero_has_image = true -%}
{%- endif -%}

{% comment %} ── HERO ─────────────────────────────────────────────────────── {% endcomment %}
<section class="editorial-hero full-width" aria-label="{{ 'home.hero.eyebrow' | t }}">
  <div class="editorial-hero__media" aria-hidden="true">
    {% if hero_has_image %}
      {{ section.settings.hero_image | image_url: width: 2800 | image_tag:
        loading: 'eager',
        class: 'editorial-hero__img',
        widths: '768, 1200, 1800, 2400',
        sizes: '100vw'
      }}
    {% else %}
      <div class="editorial-hero__img editorial-hero__img--placeholder"></div>
    {% endif %}
    <div class="editorial-hero__grain" aria-hidden="true"></div>
    <div class="editorial-hero__vignette" aria-hidden="true"></div>
  </div>

  <div class="editorial-hero__body">
    <p class="editorial-hero__season">{{ 'home.hero.season' | t }}</p>

    <h1 class="editorial-hero__headline">
      <span class="editorial-hero__headline-line1">{{ 'home.hero.headline_1' | t }}</span>
      <span class="editorial-hero__headline-line2">{{ 'home.hero.headline_2' | t }}</span>
    </h1>

    <a href="{{ routes.all_products_collection_url }}" class="editorial-hero__cta">
      {{ 'home.hero.cta_shop_now' | t }}
    </a>
  </div>

  <p class="editorial-hero__scroll-hint" aria-hidden="true">scroll</p>
</section>

{% comment %} ── EDITORIAL FEATURES / MARQUEE ─────────────────────────────── {% endcomment %}
<div class="editorial-ticker full-width" aria-hidden="true">
  <div class="editorial-ticker__track">
    <span>{{ 'home.ticker.text' | t }}</span>
    <span>{{ 'home.ticker.text' | t }}</span>
    <span>{{ 'home.ticker.text' | t }}</span>
    <span>{{ 'home.ticker.text' | t }}</span>
  </div>
</div>

{% comment %} ── CATEGORIES GRID ───────────────────────────────────────────── {% endcomment %}
{% if section.blocks.size > 0 %}
  <section class="editorial-categories" aria-label="{{ 'home.categories.label' | t }}">
    {% for block in section.blocks %}
      <article
        class="editorial-cat{% if forloop.first %} editorial-cat--wide{% endif %}"
        {{ block.shopify_attributes }}
      >
        <div class="editorial-cat__media">
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: 1400 | image_tag:
              loading: 'lazy',
              class: 'editorial-cat__img',
              widths: '600, 900, 1200',
              sizes: '(max-width: 768px) 100vw, 50vw'
            }}
          {% else %}
            <div class="editorial-cat__img editorial-cat__img--placeholder"></div>
          {% endif %}
          <div class="editorial-cat__grain" aria-hidden="true"></div>
        </div>

        <div class="editorial-cat__info">
          {% if block.settings.eyebrow != blank %}
            <p class="editorial-cat__eyebrow">{{ block.settings.eyebrow | escape }}</p>
          {% endif %}
          <h2 class="editorial-cat__title">{{ block.settings.title | escape }}</h2>
          {% if block.settings.url != blank %}
            <a href="{{ block.settings.url }}" class="editorial-cat__link">
              {{ 'home.categories.shop_link' | t }}
            </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </section>
{% endif %}

{% stylesheet %}
  /* ── SHARED ─────────────────────────────────────────────────── */
  :root {
    --cream: #f0ede5;
    --ink: #1a1a18;
    --ink-muted: rgba(26, 26, 24, 0.55);
    --serif: var(--font-heading--family, "Playfair Display", Georgia, serif);
    --sans: var(--font-body--family, "Work Sans", system-ui, sans-serif);
  }

  /* ── HERO ───────────────────────────────────────────────────── */
  .editorial-hero {
    position: relative;
    min-height: 100svh;
    overflow: hidden;
    background: #0a0a09;
    color: var(--cream);
  }

  .editorial-hero__media {
    position: absolute;
    inset: 0;
  }

  .editorial-hero__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    opacity: 0.88;
    filter: saturate(0.8) contrast(1.1);
  }

  .editorial-hero__img--placeholder {
    background: linear-gradient(170deg, #1a1a18 0%, #2d2d2a 45%, #1a1a18 100%);
  }

  /* grain layer */
  .editorial-hero__grain {
    position: absolute;
    inset: 0;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 200px;
    opacity: 0.45;
    mix-blend-mode: overlay;
  }

  /* gradient vignette */
  .editorial-hero__vignette {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(to right, rgba(10, 10, 9, 0.62) 0%, rgba(10, 10, 9, 0) 55%),
      linear-gradient(to top, rgba(10, 10, 9, 0.85) 0%, rgba(10, 10, 9, 0) 45%);
  }

  .editorial-hero__body {
    position: relative;
    z-index: 2;
    padding: max(9rem, 18vw) 4vw 8vw;
    max-width: 72rem;
  }

  .editorial-hero__season {
    font-family: var(--sans);
    font-size: 0.68rem;
    letter-spacing: 0.28em;
    text-transform: uppercase;
    color: rgba(240, 237, 229, 0.72);
    margin-bottom: 2rem;
  }

  .editorial-hero__headline {
    font-family: var(--serif);
    font-weight: 300;
    font-size: clamp(3.2rem, 7.5vw, 9rem);
    line-height: 0.96;
    letter-spacing: -0.02em;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .editorial-hero__headline-line2 {
    padding-left: clamp(2rem, 8vw, 10rem);
    font-style: italic;
  }

  .editorial-hero__cta {
    display: inline-block;
    margin-top: 3.5rem;
    font-family: var(--sans);
    font-size: 0.72rem;
    letter-spacing: 0.24em;
    text-transform: uppercase;
    color: var(--cream);
    text-decoration: none;
    border-bottom: 1px solid rgba(240, 237, 229, 0.55);
    padding-bottom: 3px;
    transition: border-color 250ms ease, color 250ms ease;
  }

  .editorial-hero__cta:hover {
    border-color: var(--cream);
    color: #fff;
  }

  .editorial-hero__scroll-hint {
    position: absolute;
    z-index: 2;
    bottom: 2.2rem;
    right: 2.8rem;
    font-family: var(--sans);
    font-size: 0.62rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: rgba(240, 237, 229, 0.55);
    writing-mode: vertical-lr;
  }

  /* ── TICKER ─────────────────────────────────────────────────── */
  .editorial-ticker {
    overflow: hidden;
    white-space: nowrap;
    padding: 1.1rem 0;
    border-top: 1px solid rgba(26, 26, 24, 0.12);
    border-bottom: 1px solid rgba(26, 26, 24, 0.12);
  }

  .editorial-ticker__track {
    display: inline-flex;
    gap: 5rem;
    animation: ticker-slide 28s linear infinite;
    font-family: var(--sans);
    font-size: 0.68rem;
    letter-spacing: 0.24em;
    text-transform: uppercase;
    color: var(--ink-muted);
  }

  @keyframes ticker-slide {
    from { transform: translateX(0); }
    to   { transform: translateX(-50%); }
  }

  /* ── CATEGORIES ─────────────────────────────────────────────── */
  .editorial-categories {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    grid-auto-rows: auto;
    gap: 1.5px;
    background: rgba(26, 26, 24, 0.10);
  }

  .editorial-cat {
    position: relative;
    overflow: hidden;
    cursor: pointer;
    background: var(--cream);
  }

  .editorial-cat--wide {
    grid-column: span 2;
  }

  .editorial-cat__media {
    position: relative;
    overflow: hidden;
  }

  .editorial-cat--wide .editorial-cat__media {
    aspect-ratio: 21 / 9;
  }

  .editorial-cat:not(.editorial-cat--wide) .editorial-cat__media {
    aspect-ratio: 4 / 5;
  }

  .editorial-cat__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.82) contrast(1.06);
    transition: transform 700ms cubic-bezier(0.22, 1, 0.36, 1);
    display: block;
  }

  .editorial-cat:hover .editorial-cat__img {
    transform: scale(1.04);
  }

  .editorial-cat__img--placeholder {
    background: linear-gradient(135deg, #1a1a18, #2d2d2a);
  }

  .editorial-cat__grain {
    position: absolute;
    inset: 0;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px;
    mix-blend-mode: multiply;
    opacity: 0.5;
  }

  .editorial-cat__info {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: clamp(1.2rem, 3vw, 2.5rem);
    background: linear-gradient(to top, rgba(10, 10, 9, 0.7) 0%, rgba(10, 10, 9, 0) 50%);
    color: var(--cream);
  }

  .editorial-cat__eyebrow {
    font-family: var(--sans);
    font-size: 0.65rem;
    letter-spacing: 0.24em;
    text-transform: uppercase;
    color: rgba(240, 237, 229, 0.72);
    margin-bottom: 0.5rem;
  }

  .editorial-cat__title {
    font-family: var(--serif);
    font-size: clamp(1.6rem, 3.5vw, 3.2rem);
    font-weight: 300;
    line-height: 1.05;
  }

  .editorial-cat__link {
    display: inline-block;
    margin-top: 1rem;
    font-family: var(--sans);
    font-size: 0.68rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: var(--cream);
    text-decoration: none;
    border-bottom: 1px solid rgba(240, 237, 229, 0.5);
    padding-bottom: 2px;
    width: fit-content;
    transition: border-color 250ms ease;
  }

  .editorial-cat__link:hover {
    border-color: var(--cream);
  }

  @media (max-width: 720px) {
    .editorial-hero__body {
      padding: max(8rem, 22vw) 6vw 10vw;
    }

    .editorial-hero__scroll-hint {
      display: none;
    }

    .editorial-categories {
      grid-template-columns: 1fr;
    }

    .editorial-cat--wide {
      grid-column: span 1;
    }

    .editorial-cat--wide .editorial-cat__media {
      aspect-ratio: 4 / 5;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:home.hero.section_name",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "t:home.hero.image_label"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "t:home.categories.block_name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:home.categories.image_label"
        },
        {
          "type": "text",
          "id": "eyebrow",
          "label": "t:home.features.eyebrow_label",
          "default": "New season"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:home.features.title_label",
          "default": "Women"
        },
        {
          "type": "url",
          "id": "url",
          "label": "t:home.features.link_url_label"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "t:home.hero.preset_name",
      "category": "t:general.home"
    }
  ]
}
{% endschema %}
