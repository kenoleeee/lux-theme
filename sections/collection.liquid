{% comment %}
  Collection page — High-End Editorial Fashion / Dark theme
  Each child is a direct .shopify-section descendant so full-width works correctly.
{% endcomment %}

{% comment %} ── COLLECTION HEADER ─────────────────────────────────────────── {% endcomment %}
{%- comment -%}
  Banner priority: custom image from Theme Editor → collection image → no image (bare strip)
{%- endcomment -%}
{%- assign banner_img = section.settings.banner_image | default: collection.image -%}

<header class="coll-header full-width">
  {%- if banner_img -%}
    <div class="coll-header__cover" aria-hidden="true">
      {{ banner_img | image_url: width: 2400 | image_tag:
        class: 'coll-header__cover-img',
        loading: 'eager',
        widths: '800, 1200, 2000, 2400',
        sizes: '100vw'
      }}
      <div class="coll-header__grain"></div>
      <div class="coll-header__vignette"></div>
    </div>
  {%- endif -%}

  <div class="coll-header__body{% unless banner_img %} coll-header__body--bare{% endunless %}">
    <p class="coll-header__eyebrow">{{ 'collections.editorial_eyebrow' | t }}</p>
    <h1 class="coll-header__title">{{ collection.title | escape }}</h1>
    {% if collection.description != blank %}
      <p class="coll-header__desc">{{ collection.description | strip_html | truncate: 220 }}</p>
    {% endif %}
  </div>
</header>

{% comment %} ── PRODUCT GRID ──────────────────────────────────────────────── {% endcomment %}
{% paginate collection.products by 12 %}

  {% if collection.products.size == 0 %}

    <div class="coll-empty full-width">
      <p class="coll-empty__msg">{{ 'collections.empty' | t }}</p>
    </div>

  {% else %}

    <section
      class="coll-grid full-width"
      style="--pad: clamp(1.2rem, {{ section.settings.side_padding }}vw, {{ section.settings.side_padding | times: 0.55 }}rem);"
      aria-label="{{ collection.title | escape }}"
    >
      {% for product in collection.products %}

        {%- comment -%}
          6-position cycle → asymmetric column spans + vertical offsets
          Row A: [7] [5]   — wide + narrow
          Row B: [5] [7]   — narrow + wide (mirrored)
          Row C: [6] [6]   — balanced with stagger
        {%- endcomment -%}
        {%- assign card_pos = forloop.index0 | modulo: 6 -%}

        {%- if card_pos == 0 -%}
          {%- assign cell_span = 'coll-cell--7' -%}
          {%- assign cell_mt   = '0' -%}
        {%- elsif card_pos == 1 -%}
          {%- assign cell_span = 'coll-cell--5' -%}
          {%- assign cell_mt   = '4rem' -%}
        {%- elsif card_pos == 2 -%}
          {%- assign cell_span = 'coll-cell--5' -%}
          {%- assign cell_mt   = '0' -%}
        {%- elsif card_pos == 3 -%}
          {%- assign cell_span = 'coll-cell--7' -%}
          {%- assign cell_mt   = '2.5rem' -%}
        {%- elsif card_pos == 4 -%}
          {%- assign cell_span = 'coll-cell--6' -%}
          {%- assign cell_mt   = '0' -%}
        {%- else -%}
          {%- assign cell_span = 'coll-cell--6' -%}
          {%- assign cell_mt   = '3.5rem' -%}
        {%- endif -%}

        {%- comment -%} Stagger delay: 0–5 then hold at 600ms {%- endcomment -%}
        {%- assign delay_idx = forloop.index0 -%}
        {%- if delay_idx > 5 -%}{%- assign delay_idx = 5 -%}{%- endif -%}
        {%- assign anim_delay = delay_idx | times: 110 -%}

        {%- assign card_eager = false -%}
        {%- if forloop.index <= 4 -%}{%- assign card_eager = true -%}{%- endif -%}

        <div
          class="coll-cell {{ cell_span }}"
          style="margin-top: {{ cell_mt }}; --delay: {{ anim_delay }}ms;"
        >
          {% render 'product-card', product: product, eager: card_eager %}
        </div>

      {% endfor %}
    </section>

    {% if paginate.pages > 1 %}
      <nav class="coll-pagination full-width" aria-label="{{ 'collections.pagination_aria' | t }}">
        {{ paginate | default_pagination }}
      </nav>
    {% endif %}

  {% endif %}

{% endpaginate %}

{% stylesheet %}
  /* ─── TOKENS ──────────────────────────────────────────────────── */
  .coll-header,
  .coll-grid,
  .coll-empty,
  .coll-pagination {
    --bg:    #0a0a09;
    --cream: #f0ede5;
    --muted: rgba(240, 237, 229, 0.42);
    --line:  rgba(240, 237, 229, 0.09);
    --serif: var(--font-heading--family, "Playfair Display", Georgia, serif);
    --sans:  var(--font-body--family,    "Work Sans", system-ui, sans-serif);
  }

  /* ═══════════════════════════════════════════════════════════════
     COLLECTION HEADER — editorial title strip
  ═══════════════════════════════════════════════════════════════ */
  .coll-header {
    position:        relative;
    min-height:      clamp(200px, 36vh, 420px);
    overflow:        hidden;
    display:         flex;
    align-items:     flex-end;
    background:      var(--bg) !important;
    color:           var(--cream);
    padding-top:     7rem;
    padding-bottom:  2.5rem;
  }

  .coll-header__cover {
    position: absolute;
    inset: 0;
  }

  .coll-header__cover-img {
    width:           100%;
    height:          100%;
    object-fit:      cover;
    object-position: center 25%;
    filter:          saturate(0.4) contrast(1.15) brightness(0.35);
    border-radius:   0 !important;
  }

  .coll-header__grain {
    position:         absolute;
    inset:            0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.045'/%3E%3C/svg%3E");
    background-size:  200px;
    mix-blend-mode:   overlay;
    pointer-events:   none;
  }

  .coll-header__vignette {
    position:   absolute;
    inset:      0;
    background: linear-gradient(
      to top,
      rgba(10,10,9,.95) 0%,
      rgba(10,10,9,.45) 60%,
      rgba(10,10,9,.15) 100%
    );
    pointer-events: none;
  }

  .coll-header__body {
    position:    relative;
    z-index:     1;
    padding:     0 clamp(1.5rem, 7vw, 7rem);
    width:       100%;
  }

  .coll-header__eyebrow {
    font-family:    var(--sans);
    font-size:      0.55rem;
    letter-spacing: 0.32em;
    text-transform: uppercase;
    color:          var(--muted);
    margin:         0 0 1rem;
  }

  /* HUGE editorial title — ultra-thin weight, deep left indent */
  .coll-header__title {
    font-family:    var(--serif);
    font-weight:    100;
    font-size:      clamp(3.2rem, 9vw, 10rem);
    line-height:    0.9;
    letter-spacing: -0.03em;
    color:          var(--cream);
    margin:         0;
    /* extra left push for the editorial off-axis look */
    padding-left:   clamp(0rem, 3vw, 3.5rem);
  }

  .coll-header__desc {
    font-family:    var(--sans);
    font-size:      0.72rem;
    letter-spacing: 0.1em;
    color:          var(--muted);
    margin:         1.2rem 0 0;
    padding-left:   clamp(0rem, 3vw, 3.5rem);
    max-width:      48ch;
    line-height:    1.7;
  }

  /* ═══════════════════════════════════════════════════════════════
     EDITORIAL 12-COL ASYMMETRIC GRID
  ═══════════════════════════════════════════════════════════════ */
  .coll-grid {
    background:            var(--bg) !important;
    background-color:      var(--bg) !important;
    display:               grid !important;
    grid-template-columns: repeat(12, minmax(0, 1fr)) !important;
    column-gap:            clamp(1rem, 2vw, 2rem) !important;
    row-gap:               clamp(2rem, 4vw, 3.5rem) !important;
    padding:               3rem var(--pad, 4vw) 5rem !important;
    align-items:           start;
  }

  /* grid cell — each wraps one product card */
  .coll-cell {
    grid-column: span 6; /* fallback: half-width */
    transition:  opacity 420ms cubic-bezier(0.23, 1, 0.32, 1);
  }

  /* asymmetric span classes */
  .coll-cell--5 { grid-column: span 5 !important; }
  .coll-cell--6 { grid-column: span 6 !important; }
  .coll-cell--7 { grid-column: span 7 !important; }

  /* ─── PAGE-LOAD STAGGER ANIMATION ────────────────────────────── */
  @keyframes coll-in {
    from { opacity: 0; transform: translateY(22px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  .coll-cell {
    animation: coll-in 0.85s cubic-bezier(0.23, 1, 0.32, 1) var(--delay, 0ms) both;
  }

  /* ─── GROUP HOVER — dim siblings, focus on hovered card ──────── */
  .coll-grid:has(.coll-cell:hover) .coll-cell {
    opacity: 0.55;
  }
  .coll-grid:has(.coll-cell:hover) .coll-cell:hover {
    opacity: 1 !important;
  }

  /* scale on hovered image */
  .coll-cell:hover .pc__img--primary:only-child,
  .coll-cell:hover .pc__img--primary {
    transform: scale(1.05) !important;
    transition-timing-function: cubic-bezier(0.23, 1, 0.32, 1) !important;
    transition-duration: 750ms !important;
  }

  /* kill any base-theme card overrides */
  .coll-grid .card,
  .coll-grid .card-wrapper,
  .coll-grid .card__inner,
  .coll-grid .card__media,
  .coll-grid [class*="card"],
  .coll-grid [class*="product-card"] {
    background:    transparent !important;
    border:        none !important;
    border-radius: 0 !important;
    box-shadow:    none !important;
    color:         var(--cream) !important;
  }

  /* ─── EMPTY STATE ─────────────────────────────────────────────── */
  .coll-empty {
    background:      var(--bg) !important;
    min-height:      40vh;
    display:         flex;
    align-items:     center;
    justify-content: center;
    padding:         5rem 2rem;
  }

  .coll-empty__msg {
    font-family:  var(--serif);
    font-weight:  300;
    font-style:   italic;
    font-size:    clamp(1.4rem, 3vw, 2.4rem);
    color:        var(--muted);
    text-align:   center;
    margin:       0;
  }

  /* ─── PAGINATION ──────────────────────────────────────────────── */
  .coll-pagination {
    background: var(--bg) !important;
    padding:    0 clamp(1.5rem, 5vw, 5rem) clamp(3rem, 6vw, 5rem);
  }

  .coll-pagination .pagination {
    display:         flex;
    flex-wrap:       wrap;
    justify-content: center;
    gap:             1.5rem;
    list-style:      none;
    padding:         2rem 0 0;
    margin:          0;
    border-top:      1px solid var(--line);
  }

  .coll-pagination a,
  .coll-pagination span {
    font-family:     var(--sans);
    font-size:       0.62rem;
    letter-spacing:  0.22em;
    text-transform:  uppercase;
    text-decoration: none;
    color:           var(--cream);
    opacity:         0.45;
    padding-bottom:  2px;
    border-bottom:   1px solid transparent;
    transition:      opacity 220ms ease, border-color 220ms ease;
  }

  .coll-pagination a:hover { opacity: 1; border-bottom-color: rgba(240,237,229,.4); }
  .coll-pagination .current a,
  .coll-pagination .current span { opacity: 1; border-bottom-color: var(--cream); }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE — tablet & mobile collapse editorial grid
  ═══════════════════════════════════════════════════════════════ */

  /* tablet (≤ 1024px): flatten to simple 2-col, keep feel */
  @media (max-width: 1024px) {
    .coll-header__title {
      font-size: clamp(2.4rem, 7vw, 5rem);
      padding-left: clamp(0rem, 2vw, 2rem);
    }

    .coll-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr)) !important;
      column-gap: 1.2rem !important;
      row-gap:    2rem !important;
      padding:    2rem var(--pad, 3vw) 3.5rem !important;
    }

    /* override spans so they all become 1-of-2 on tablet */
    .coll-cell,
    .coll-cell--5,
    .coll-cell--6,
    .coll-cell--7 {
      grid-column: span 1 !important;
      margin-top: 0 !important;
    }

    /* restore subtle alternating stagger only */
    .coll-cell:nth-child(even) {
      margin-top: 1.8rem !important;
    }
  }

  /* mobile (≤ 640px): single column */
  @media (max-width: 640px) {
    .coll-header {
      min-height:      clamp(160px, 30vh, 260px);
      padding-top:     5.5rem;
      padding-bottom:  2rem;
    }

    .coll-header__eyebrow { display: none; }

    .coll-header__title {
      font-size:    clamp(2.2rem, 11vw, 3.8rem);
      padding-left: 0;
    }

    .coll-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr)) !important;
      column-gap: 0.8rem !important;
      row-gap:    1.2rem !important;
      padding:    1.2rem 1rem 3rem !important;
    }

    .coll-cell:nth-child(even) {
      margin-top: 1.2rem !important;
    }

    .coll-pagination { padding: 0 1rem 2.5rem; }
    .coll-pagination .pagination { gap: 1rem; }
  }

  /* ─── prefers-reduced-motion: kill entrance animation ────────── */
  @media (prefers-reduced-motion: reduce) {
    .coll-cell { animation: none; opacity: 1; }
  }
{% endstylesheet %}

