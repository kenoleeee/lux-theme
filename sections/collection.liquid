{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<section class="collection-editorial-header full-width">
  {% if collection.image %}
    {{ collection.image | image_url: width: 2200 | image_tag: class: 'collection-editorial-header__media' }}
  {% endif %}

  <div class="collection-editorial-header__overlay">
    <p class="collection-editorial-header__eyebrow">{{ 'collections.editorial_eyebrow' | t }}</p>
    <h1 class="collection-editorial-header__title">{{ collection.title | escape }}</h1>

    {% if collection.description != blank %}
      <p class="collection-editorial-header__description">{{ collection.description | strip_html | escape }}</p>
    {% endif %}
  </div>
</section>

{% paginate collection.products by 12 %}
  <section class="collection-editorial-grid">
    {% for product in collection.products %}
      <article class="collection-editorial-card">
        {% if product.featured_image %}
          {% render 'image',
            class: 'collection-editorial-card__image',
            image: product.featured_image,
            url: product.url,
            width: 900,
            height: 1200,
            crop: 'center'
          %}
        {% endif %}

        <div class="collection-editorial-card__content">
          <p class="collection-editorial-card__meta">
            {% if product.vendor != blank %}
              {{ product.vendor | escape }}
            {% else %}
              {{ shop.name | escape }}
            {% endif %}
          </p>

          <h2 class="collection-editorial-card__title">
            <a href="{{ product.url }}">{{ product.title | escape }}</a>
          </h2>

          <p class="collection-editorial-card__price">
            {% if product.compare_at_price_max > product.price %}
              <span class="collection-editorial-card__price--compare">{{ product.compare_at_price_max | money }}</span>
            {% endif %}
            <span>{{ product.price | money }}</span>
          </p>
        </div>
      </article>
    {% endfor %}
  </section>

  <div class="collection-editorial-pagination">
    {{ paginate | default_pagination }}
  </div>
{% endpaginate %}

{% stylesheet %}
  .collection-editorial-header {
    position: relative;
    min-height: clamp(340px, 56vw, 640px);
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    margin-bottom: clamp(2rem, 6vw, 5rem);
    background: linear-gradient(120deg, #16171d, #2a2e37 55%, #0f1013);
  }

  .collection-editorial-header__media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.85) contrast(1.08);
  }

  .collection-editorial-header__overlay {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: clamp(1.5rem, 4vw, 3.5rem);
    color: #f8fafc;
    background: linear-gradient(to top, rgba(2, 6, 23, 0.85), rgba(2, 6, 23, 0.2), transparent);
  }

  .collection-editorial-header__eyebrow {
    font-size: 0.75rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    opacity: 0.85;
    margin-bottom: 0.75rem;
  }

  .collection-editorial-header__title {
    font-size: clamp(2rem, 5.5vw, 4.4rem);
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .collection-editorial-header__description {
    margin-top: 1rem;
    max-width: 56ch;
    color: rgba(248, 250, 252, 0.88);
  }

  .collection-editorial-grid {
    display: grid;
    gap: clamp(1.1rem, 1.6vw, 1.8rem);
    grid-template-columns: repeat(3, minmax(0, 1fr));
    margin-bottom: 2rem;
  }

  .collection-editorial-card {
    background: #fff;
    border-radius: 18px;
    overflow: hidden;
    border: 1px solid rgba(15, 23, 42, 0.08);
    box-shadow: 0 14px 36px rgba(15, 23, 42, 0.08);
    transition: transform 220ms ease, box-shadow 220ms ease;
  }

  .collection-editorial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 26px 54px rgba(15, 23, 42, 0.15);
  }

  .collection-editorial-card .image {
    display: block;
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  .collection-editorial-card .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 350ms ease;
  }

  .collection-editorial-card:hover .image img {
    transform: scale(1.05);
  }

  .collection-editorial-card__content {
    padding: 1rem 1rem 1.2rem;
  }

  .collection-editorial-card__meta {
    font-size: 0.72rem;
    letter-spacing: 0.17em;
    text-transform: uppercase;
    color: rgba(15, 23, 42, 0.58);
  }

  .collection-editorial-card__title {
    margin-top: 0.55rem;
    font-size: 1.05rem;
    line-height: 1.3;
  }

  .collection-editorial-card__title a {
    color: inherit;
    text-decoration: none;
  }

  .collection-editorial-card__price {
    margin-top: 0.7rem;
    display: flex;
    align-items: baseline;
    gap: 0.55rem;
    font-size: 1rem;
    color: #020617;
  }

  .collection-editorial-card__price--compare {
    text-decoration: line-through;
    font-size: 0.88rem;
    color: rgba(15, 23, 42, 0.54);
  }

  .collection-editorial-pagination {
    margin-bottom: clamp(2rem, 4vw, 4rem);
  }

  @media (max-width: 980px) {
    .collection-editorial-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 680px) {
    .collection-editorial-grid {
      grid-template-columns: minmax(0, 1fr);
    }
  }
{% endstylesheet %}

