  "name": "t:general.collection",
  "settings": [
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "t:collection.columns_desktop",
      "min": 2,
      "max": 3,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "t:collection.grid_gap",
      "min": 2,
      "max": 8,
      "step": 0.5,
      "unit": "rem",
      "default": 4
    },
    {
      "type": "range",
      "id": "stagger_offset",
      "label": "t:collection.stagger_offset",
      "min": 0,
      "max": 8,
      "step": 0.5,
      "unit": "rem",
      "default": 3
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "t:labels.section_padding_y",
      "min": 0,
      "max": 160,
      "step": 8,
      "unit": "px",
      "default": 96
    }
  ]
}
{% endschema %}
