{% comment %}
  Collection page — High-End Editorial Fashion / Dark theme
  Each child is a direct .shopify-section descendant so full-width works correctly.
{% endcomment %}

{% comment %} ── COLLECTION HEADER ─────────────────────────────────────────── {% endcomment %}
{%- comment -%}
  Banner priority: custom image from Theme Editor → collection image → no image (bare strip)
{%- endcomment -%}
{%- assign banner_img = section.settings.banner_image | default: collection.image -%}

<header class="coll-header full-width">
  {%- if banner_img -%}
    <div class="coll-header__cover" aria-hidden="true">
      {{ banner_img | image_url: width: 2400 | image_tag:
        class: 'coll-header__cover-img',
        loading: 'eager',
        widths: '800, 1200, 2000, 2400',
        sizes: '100vw'
      }}
      <div class="coll-header__grain"></div>
      <div class="coll-header__vignette"></div>
    </div>
  {%- endif -%}

  <div class="coll-header__body{% unless banner_img %} coll-header__body--bare{% endunless %}">
    <p class="coll-header__eyebrow">{{ 'collections.editorial_eyebrow' | t }}</p>
    <h1 class="coll-header__title">{{ collection.title | escape }}</h1>
    {% if collection.description != blank %}
      <p class="coll-header__desc">{{ collection.description | strip_html | truncate: 220 }}</p>
    {% endif %}
  </div>
</header>

{% comment %} ── PRODUCT GRID ──────────────────────────────────────────────── {% endcomment %}
{% paginate collection.products by 12 %}

  {% if collection.products.size == 0 %}

    <div class="coll-empty full-width">
      <p class="coll-empty__msg">{{ 'collections.empty' | t }}</p>
    </div>

  {% else %}

    <section
      class="coll-grid full-width"
      style="
        --gap-row: {{ section.settings.grid_gap }}rem;
        --gap-col: {{ section.settings.grid_gap | times: 0.65 }}rem;
        --cols:    {{ section.settings.columns_desktop }};
        --offset:  {{ section.settings.stagger_offset }}rem;
        --pad:     clamp(1.2rem, {{ section.settings.side_padding }}vw, {{ section.settings.side_padding | times: 0.6 }}rem);
      "
      aria-label="{{ collection.title | escape }}"
    >
      {% for product in collection.products %}
        {%- assign card_remainder = forloop.index | modulo: 2 -%}
        {%- assign card_offset = false -%}
        {%- if card_remainder == 0 -%}{%- assign card_offset = true -%}{%- endif -%}

        {%- assign card_eager = false -%}
        {%- if forloop.index <= 4 -%}{%- assign card_eager = true -%}{%- endif -%}

        {% render 'product-card', product: product, offset: card_offset, eager: card_eager %}
      {% endfor %}
    </section>

    {% if paginate.pages > 1 %}
      <nav class="coll-pagination full-width" aria-label="{{ 'collections.pagination_aria' | t }}">
        {{ paginate | default_pagination }}
      </nav>
    {% endif %}

  {% endif %}

{% endpaginate %}

{% stylesheet %}
  /* ─── TOKENS ──────────────────────────────────────────────────── */
  .coll-header,
  .coll-grid,
  .coll-empty,
  .coll-pagination {
    --bg:    #0a0a09;
    --cream: #f0ede5;
    --muted: rgba(240, 237, 229, 0.45);
    --serif: var(--font-heading--family, "Playfair Display", Georgia, serif);
    --sans:  var(--font-body--family,    "Work Sans", system-ui, sans-serif);
  }

  /* ─── COLLECTION HEADER — compact banner strip ────────────────── */
  .coll-header {
    position:    relative;
    /* max ~28vh — short banner, not a full-screen poster */
    height:      clamp(160px, 28vh, 320px);
    overflow:    hidden;
    display:     flex;
    align-items: center;
    background:  var(--bg) !important;
    color:       var(--cream);
    /* top padding accounts for fixed header (~5rem) */
    padding-top: 5rem;
  }

  /* background image fills the strip */
  .coll-header__cover {
    position: absolute;
    inset: 0;
  }

  .coll-header__cover-img {
    width:         100%;
    height:        100%;
    object-fit:    cover;
    object-position: center 30%;
    filter:        saturate(0.6) contrast(1.1) brightness(0.55);
    border-radius: 0 !important;
  }

  .coll-header__grain {
    position:   absolute;
    inset:      0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
    background-size: 200px;
    mix-blend-mode:  overlay;
    pointer-events:  none;
  }

  /* soft gradient so text stays readable over the image */
  .coll-header__vignette {
    position:   absolute;
    inset:      0;
    background: linear-gradient(
      to right,
      rgba(10,10,9,.85) 0%,
      rgba(10,10,9,.45) 50%,
      rgba(10,10,9,.15) 100%
    );
    pointer-events: none;
  }

  .coll-header__body {
    position:   relative;
    z-index:    1;
    padding:    0 clamp(1.5rem, 5vw, 5rem);
    display:    flex;
    align-items: baseline;
    gap:        1.2rem;
    flex-wrap:  wrap;
  }

  /* no image — simpler dark strip, still respects fixed header */
  .coll-header__body--bare {
    padding-top: 0;
  }

  .coll-header__eyebrow {
    font-family:    var(--sans);
    font-size:      0.58rem;
    letter-spacing: 0.28em;
    text-transform: uppercase;
    color:          var(--muted);
    margin:         0;
    white-space:    nowrap;
  }

  .coll-header__title {
    font-family:    var(--serif);
    font-weight:    300;
    font-size:      clamp(1.6rem, 3.5vw, 3rem);
    line-height:    1;
    letter-spacing: -0.02em;
    color:          var(--cream);
    margin:         0;
  }

  /* description hidden in compact mode — not enough room */
  .coll-header__desc { display: none; }

  /* ─── PRODUCT GRID ────────────────────────────────────────────── */
  .coll-grid {
    background:    var(--bg) !important;
    background-color: var(--bg) !important;
    display:       grid !important;
    /* 4 cols desktop, overridden at smaller breakpoints */
    grid-template-columns: repeat(var(--cols, 4), minmax(0, 1fr)) !important;
    gap:           var(--gap-row, 1.8rem) var(--gap-col, 1.2rem) !important;
    padding:       2rem var(--pad, 3vw) 4rem !important;
    align-items:   start;
  }

  /* kill any base-theme card styling */
  .coll-grid *,
  .coll-grid *::before,
  .coll-grid *::after { box-sizing: border-box; }

  .coll-grid .card,
  .coll-grid .card-wrapper,
  .coll-grid .card__inner,
  .coll-grid .card__media,
  .coll-grid [class*="card"],
  .coll-grid [class*="product-card"] {
    background:    transparent !important;
    border:        none !important;
    border-radius: 0 !important;
    box-shadow:    none !important;
    color:         var(--cream) !important;
  }

  /* ─── EMPTY STATE ─────────────────────────────────────────────── */
  .coll-empty {
    background: var(--bg) !important;
    min-height: 40vh;
    display:    flex;
    align-items: center;
    justify-content: center;
    padding:    5rem 2rem;
  }

  .coll-empty__msg {
    font-family:  var(--serif);
    font-weight:  300;
    font-style:   italic;
    font-size:    clamp(1.4rem, 3vw, 2.4rem);
    color:        var(--muted);
    text-align:   center;
    margin:       0;
  }

  /* ─── PAGINATION ──────────────────────────────────────────────── */
  .coll-pagination {
    background: var(--bg) !important;
    padding:    0 clamp(1.5rem, 5vw, 5rem) clamp(3rem, 6vw, 5rem);
  }

  .coll-pagination .pagination {
    display:         flex;
    flex-wrap:       wrap;
    justify-content: center;
    gap:             1.5rem;
    list-style:      none;
    padding:         2rem 0 0;
    margin:          0;
    border-top:      1px solid rgba(240, 237, 229, 0.12);
  }

  .coll-pagination a,
  .coll-pagination span {
    font-family:     var(--sans);
    font-size:       0.64rem;
    letter-spacing:  0.22em;
    text-transform:  uppercase;
    text-decoration: none;
    color:           var(--cream);
    opacity:         0.5;
    padding-bottom:  2px;
    border-bottom:   1px solid transparent;
    transition:      opacity 220ms ease, border-color 220ms ease;
  }

  .coll-pagination a:hover { opacity: 1; border-bottom-color: rgba(240,237,229,.4); }
  .coll-pagination .current a,
  .coll-pagination .current span { opacity: 1; border-bottom-color: var(--cream); }

  /* ─── RESPONSIVE ──────────────────────────────────────────────── */
  /* tablet: 3 cols */
  @media (max-width: 1100px) {
    .coll-grid { grid-template-columns: repeat(3, minmax(0, 1fr)) !important; }
  }

  /* large mobile: 2 cols so a full card row is visible */
  @media (max-width: 767px) {
    .coll-header {
      height:       clamp(120px, 22vh, 200px);
      padding-top:  4.5rem;
    }

    .coll-header__eyebrow { display: none; }

    .coll-header__title {
      font-size: clamp(1.3rem, 6vw, 2rem);
    }

    .coll-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr)) !important;
      gap:     1.2rem 0.8rem !important;
      padding: 1.2rem 0.8rem 3rem !important;
    }

    .coll-pagination { padding: 0 1rem 2.5rem; }
    .coll-pagination .pagination { gap: 1rem; }
  }

  /* very small phones: stay on 2 cols but tiny padding */
  @media (max-width: 390px) {
    .coll-grid {
      gap:     1rem 0.5rem !important;
      padding: 1rem 0.5rem 2.5rem !important;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collection",
  "settings": [
    {
      "type": "header",
      "content": "t:collection.header_banner"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "t:collection.banner_image"
    },
    {
      "type": "header",
      "content": "t:collection.header_grid"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "t:collection.columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "t:collection.grid_gap",
      "min": 1,
      "max": 5,
      "step": 0.5,
      "unit": "rem",
      "default": 1.5
    },
    {
      "type": "range",
      "id": "stagger_offset",
      "label": "t:collection.stagger_offset",
      "min": 0,
      "max": 6,
      "step": 0.5,
      "unit": "rem",
      "default": 0
    },
    {
      "type": "range",
      "id": "side_padding",
      "label": "t:collection.side_padding",
      "min": 1,
      "max": 8,
      "step": 1,
      "unit": "vw",
      "default": 3
    }
  ]
}
{% endschema %}
