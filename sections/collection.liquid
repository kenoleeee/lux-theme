{% comment %}
  Collection page — High-End Editorial Fashion / Dark theme
  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

{% comment %} ── HEADER ──────────────────────────────────────────────────── {% endcomment %}
<header class="coll-header full-width">
  {% if collection.image %}
    <div class="coll-header__cover" aria-hidden="true">
      {{ collection.image | image_url: width: 2400 | image_tag:
        class: 'coll-header__cover-img',
        loading: 'eager',
        widths: '800, 1200, 2000, 2400',
        sizes: '100vw'
      }}
      <div class="coll-header__cover-grain"></div>
      <div class="coll-header__cover-vignette"></div>
    </div>
  {% endif %}

  <div class="coll-header__body{% unless collection.image %} coll-header__body--no-cover{% endunless %}">
    <p class="coll-header__eyebrow">{{ 'collections.editorial_eyebrow' | t }}</p>
    <h1 class="coll-header__title">{{ collection.title | escape }}</h1>
    {% if collection.description != blank %}
      <p class="coll-header__desc">{{ collection.description | strip_html | truncate: 220 }}</p>
    {% endif %}
  </div>
</header>

{% comment %} ── GRID / EMPTY ─────────────────────────────────────────────── {% endcomment %}
{% paginate collection.products by 12 %}

  {% if collection.products.size == 0 %}

    <div class="coll-empty full-width">
      <p class="coll-empty__msg">{{ 'collections.empty' | t }}</p>
    </div>

  {% else %}

    <section
      class="coll-grid full-width"
      style="
        --gap-row: {{ section.settings.grid_gap }}rem;
        --gap-col: {{ section.settings.grid_gap | times: 0.65 }}rem;
        --cols:    {{ section.settings.columns_desktop }};
        --offset:  {{ section.settings.stagger_offset }}rem;
        --pad:     clamp(1.5rem, {{ section.settings.side_padding }}vw, {{ section.settings.side_padding | times: 0.6 }}rem);
      "
      aria-label="{{ collection.title | escape }}"
    >
      {% for product in collection.products %}
        {%- assign is_even = forloop.index | modulo: 2 -%}

        <article class="coll-card{% if is_even == 0 %} coll-card--offset{% endif %}">
          <a class="coll-card__link" href="{{ product.url }}" aria-label="{{ product.title | escape }}">

            {% comment %} ── Media ────────────────────────────────────────── {% endcomment %}
            <div class="coll-card__media">

              {% if product.featured_image %}
                {{ product.featured_image
                  | image_url: width: 1200, height: 1600, crop: 'center'
                  | image_tag:
                    class: 'coll-card__img coll-card__img--primary',
                    loading: 'lazy',
                    widths: '480, 720, 960, 1200',
                    sizes: '(max-width: 640px) 100vw, (max-width: 1100px) 50vw, 33vw'
                }}
              {% endif %}

              {% if product.images[1] %}
                {{ product.images[1]
                  | image_url: width: 1200, height: 1600, crop: 'center'
                  | image_tag:
                    class: 'coll-card__img coll-card__img--alt',
                    loading: 'lazy',
                    widths: '480, 720, 960, 1200',
                    sizes: '(max-width: 640px) 100vw, (max-width: 1100px) 50vw, 33vw',
                    aria_hidden: 'true'
                }}
              {% endif %}

              {% if product.compare_at_price_max > product.price %}
                <span class="coll-card__badge">{{ 'collections.sale_badge' | t }}</span>
              {% endif %}

            </div>

            {% comment %} ── Info ─────────────────────────────────────────── {% endcomment %}
            <div class="coll-card__info">

              {% if product.vendor != blank %}
                <p class="coll-card__vendor">{{ product.vendor | escape }}</p>
              {% endif %}

              <h2 class="coll-card__name">{{ product.title | escape }}</h2>

              <p class="coll-card__price">
                {% if product.compare_at_price_max > product.price %}
                  <s class="coll-card__price-was">{{ product.compare_at_price_max | money }}</s>
                {% endif %}
                {{ product.price | money }}
              </p>

            </div>

          </a>
        </article>

      {% endfor %}
    </section>

    {% if paginate.pages > 1 %}
      <nav class="coll-pagination full-width" aria-label="{{ 'collections.pagination_aria' | t }}">
        {{ paginate | default_pagination }}
      </nav>
    {% endif %}

  {% endif %}

{% endpaginate %}

{% stylesheet %}
  /* ── Palette tokens ──────────────────────────────────────── */
  .coll-header,
  .coll-grid,
  .coll-empty,
  .coll-pagination {
    --bg:    #0a0a09;
    --dim:   #111110;
    --cream: #f0ede5;
    --muted: rgba(240, 237, 229, 0.48);
    --serif: var(--font-heading--family, "Playfair Display", Georgia, serif);
    --sans:  var(--font-body--family, "Work Sans", system-ui, sans-serif);
  }

  /* ── HEADER ──────────────────────────────────────────────── */
  .coll-header {
    position: relative;
    min-height: clamp(300px, 50vw, 660px);
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    background: var(--bg);
    color: var(--cream);
  }

  .coll-header__cover {
    position: absolute;
    inset: 0;
  }

  .coll-header__cover-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.75) contrast(1.1) brightness(0.75);
  }

  .coll-header__cover-grain {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3CfeColorMatrix type='saturate' values='0'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.05'/%3E%3C/svg%3E");
    background-size: 200px;
    mix-blend-mode: overlay;
    pointer-events: none;
  }

  .coll-header__cover-vignette {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(to top,  rgba(10,10,9,.92) 0%, rgba(10,10,9,0) 55%),
      linear-gradient(to right, rgba(10,10,9,.5) 0%, rgba(10,10,9,0) 60%);
    pointer-events: none;
  }

  .coll-header__body {
    position: relative;
    z-index: 1;
    padding: clamp(2rem, 5vw, 4.5rem) clamp(1.5rem, 6vw, 6rem);
    max-width: 72rem;
  }

  .coll-header__body--no-cover {
    padding-block: clamp(5rem, 12vw, 10rem);
  }

  .coll-header__eyebrow {
    font-family: var(--sans);
    font-size: 0.64rem;
    letter-spacing: 0.28em;
    text-transform: uppercase;
    color: var(--muted);
    margin-bottom: 1rem;
  }

  .coll-header__title {
    font-family: var(--serif);
    font-weight: 300;
    font-size: clamp(2.6rem, 7vw, 6rem);
    line-height: 0.95;
    letter-spacing: -0.02em;
  }

  .coll-header__desc {
    margin-top: 1.4rem;
    max-width: 48ch;
    font-family: var(--sans);
    font-size: 0.88rem;
    line-height: 1.75;
    color: rgba(240, 237, 229, 0.7);
  }

  /* ── GRID ────────────────────────────────────────────────── */
  .coll-grid {
    background: var(--bg);
    display: grid;
    grid-template-columns: repeat(var(--cols, 2), minmax(0, 1fr));
    gap: var(--gap-row, 5rem) var(--gap-col, 3rem);
    padding: var(--gap-row, 5rem) var(--pad, 5vw) calc(var(--gap-row, 5rem) * 1.4);
    align-items: start;
  }

  /* ── CARD ────────────────────────────────────────────────── */
  .coll-card {
    background: transparent;
    border: none;
    box-shadow: none;
  }

  .coll-card--offset {
    margin-top: var(--offset, 4rem);
  }

  .coll-card__link {
    display: block;
    text-decoration: none;
    color: var(--cream);
    border: none;
    outline-offset: 4px;
  }

  /* ── MEDIA ───────────────────────────────────────────────── */
  .coll-card__media {
    position: relative;
    overflow: hidden;
    aspect-ratio: 3 / 4;
    background: var(--dim);
    border-radius: 0;
    border: none;
    box-shadow: none;
  }

  .coll-card__img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
    transition:
      opacity  550ms ease,
      transform 700ms cubic-bezier(0.22, 1, 0.36, 1);
  }

  .coll-card__img--primary {
    opacity: 1;
    transform: scale(1);
  }

  .coll-card__img--alt {
    opacity: 0;
    transform: scale(1.04);
  }

  /* hover: swap to alt image */
  .coll-card__link:hover .coll-card__img--primary,
  .coll-card__link:focus-visible .coll-card__img--primary {
    opacity: 0;
    transform: scale(1.04);
  }

  .coll-card__link:hover .coll-card__img--alt,
  .coll-card__link:focus-visible .coll-card__img--alt {
    opacity: 1;
    transform: scale(1);
  }

  /* no alt image — just scale primary */
  .coll-card__link:hover .coll-card__img--primary:only-child {
    opacity: 1;
    transform: scale(1.05);
  }

  /* sale badge */
  .coll-card__badge {
    position: absolute;
    top: 1rem;
    left: 0;
    z-index: 2;
    background: var(--cream);
    color: var(--bg);
    font-family: var(--sans);
    font-size: 0.56rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    padding: 0.3rem 0.65rem;
    border-radius: 0;
  }

  /* ── INFO ────────────────────────────────────────────────── */
  .coll-card__info {
    padding-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.32rem;
    background: transparent;
    border: none;
    box-shadow: none;
  }

  .coll-card__vendor {
    font-family: var(--sans);
    font-size: 0.6rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: var(--cream);
    opacity: 0.5;
  }

  .coll-card__name {
    font-family: var(--sans);
    font-size: 0.68rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--cream);
    line-height: 1.45;
  }

  .coll-card__price {
    margin-top: 0.35rem;
    font-family: var(--serif);
    font-style: italic;
    font-size: 1rem;
    font-weight: 400;
    color: var(--cream);
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .coll-card__price-was {
    font-style: normal;
    font-size: 0.78rem;
    color: var(--muted);
    text-decoration: line-through;
  }

  /* ── EMPTY ───────────────────────────────────────────────── */
  .coll-empty {
    background: var(--bg);
    min-height: 44vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem;
  }

  .coll-empty__msg {
    font-family: var(--serif);
    font-weight: 300;
    font-style: italic;
    font-size: clamp(1.8rem, 4vw, 3rem);
    color: var(--muted);
    text-align: center;
  }

  /* ── PAGINATION ──────────────────────────────────────────── */
  .coll-pagination {
    background: var(--bg);
    padding: 0 clamp(1.5rem, 6vw, 6rem) clamp(4rem, 7vw, 7rem);
  }

  .coll-pagination .pagination {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    list-style: none;
    padding: 2rem 0 0;
    margin: 0;
    border-top: 1px solid rgba(240, 237, 229, 0.12);
  }

  .coll-pagination a,
  .coll-pagination span {
    font-family: var(--sans);
    font-size: 0.64rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--cream);
    opacity: 0.5;
    padding-bottom: 2px;
    border-bottom: 1px solid transparent;
    transition: opacity 220ms ease, border-color 220ms ease;
  }

  .coll-pagination a:hover { opacity: 1; border-bottom-color: rgba(240,237,229,.45); }
  .coll-pagination .current a,
  .coll-pagination .current span { opacity: 1; border-bottom-color: var(--cream); }

  /* ── RESPONSIVE ──────────────────────────────────────────── */
  @media (max-width: 1100px) {
    .coll-grid { --cols: 2; }
  }

  @media (max-width: 640px) {
    .coll-grid {
      --cols: 1;
      --offset: 0rem;
      gap: 3.5rem;
      padding-inline: 1.2rem;
    }

    .coll-card--offset { margin-top: 0; }

    .coll-header__body {
      padding-inline: 1.4rem;
      padding-block: clamp(5rem, 18vw, 9rem) 2.5rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collection",
  "settings": [
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "t:collection.columns_desktop",
      "min": 2,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "t:collection.grid_gap",
      "min": 2,
      "max": 8,
      "step": 0.5,
      "unit": "rem",
      "default": 5
    },
    {
      "type": "range",
      "id": "stagger_offset",
      "label": "t:collection.stagger_offset",
      "min": 0,
      "max": 8,
      "step": 0.5,
      "unit": "rem",
      "default": 4
    },
    {
      "type": "range",
      "id": "side_padding",
      "label": "t:collection.side_padding",
      "min": 2,
      "max": 12,
      "step": 1,
      "unit": "vw",
      "default": 6
    }
  ]
}
{% endschema %}
