  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .svg-animated path,
    .svg-animated line,
    .svg-animated polyline,
    .svg-animated ellipse,
    .svg-animated circle,
    .svg-animated text {
      transition: none !important;
      stroke-dashoffset: 0 !important;
      opacity: 1 !important;
    }
  }
