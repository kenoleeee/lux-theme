    margin: 0 auto;
    display: block;
  }

  .abt__diagram--right svg {
    width:  100%;
    height: auto;
  }

  .abt__diagram-caption {
    display:        block;
    margin-top:     1.4rem;
    font-family:    var(--sans);
    font-size:      0.58rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color:          var(--muted);
    opacity:        0.6;
    text-align:     center;
  }

  /* ── Background grid lines: always visible (no draw anim) ── */
  .svg-bg {
    opacity: 0.15;
    /* override JS animation setup for bg lines */
    stroke-dasharray: none !important;
    stroke-dashoffset: 0 !important;
    transition: none !important;
  }

  /* ── Drawn paths — initial hidden state ──────────────────── */
  .svg-animated path,
  .svg-animated line,
  .svg-animated polyline,
  .svg-animated ellipse {
    stroke-dasharray:  2000;
    stroke-dashoffset: 2000;
    transition: stroke-dashoffset 0s; /* JS will set duration */
  }

  /* circles need separate handling via JS (getTotalLength workaround) */
  .svg-animated circle {
    transition: opacity 0.4s ease, r 0.4s ease;
    opacity: 0;
  }

  /* SVG text labels fade in together */
  .svg-animated text {
    opacity: 0 !important;
    transition: opacity 0.6s ease;
  }

  /* active state — triggered by JS adding .is-drawn to the <svg> */
  .svg-animated.is-drawn path,
  .svg-animated.is-drawn line,
  .svg-animated.is-drawn polyline,
  .svg-animated.is-drawn ellipse {
    stroke-dashoffset: 0;
  }

  .svg-animated.is-drawn circle { opacity: 1; }
  .svg-animated.is-drawn text   { opacity: 1 !important; }

  /* bg lines stay visible regardless of draw state */
  .svg-animated.is-drawn .svg-bg,
  .svg-animated:not(.is-drawn) .svg-bg {
    opacity:           0.12 !important;
    stroke-dashoffset: 0 !important;
  }

  /* ═══════════════════════════════════════════════════════════
