      grid-template-columns: 1fr 1fr;
      gap: clamp(3rem, 6vw, 7rem);
      align-items: start;
    }

    .abt__chapter--reverse > :not(.abt__chapter-meta) {
      direction: rtl;
    }
    .abt__chapter--reverse > :not(.abt__chapter-meta) > * {
      direction: ltr;
    }
  }

  /* ── Stacked layout (SVG above, text below) ─────────────── */
  .abt__chapter--stacked .abt__chapter-body--centered {
    max-width:  72ch;
    margin:     4rem auto 0;
    text-align: center;
