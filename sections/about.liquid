{% javascript %}
  (function () {
    'use strict';

    /* ── Give each path its own stagger delay ─────────────── */
    function prepareSvg(svg) {
      var STEP = 140; /* ms between sequential path draws */
      var drawables = Array.from(
        svg.querySelectorAll('path, line, polyline, ellipse')
      ).filter(function (el) {
        return !el.classList.contains('svg-bg');
      });

      drawables.forEach(function (el, i) {
        var len;
        try { len = el.getTotalLength(); } catch (e) { len = 800; }
        el.style.strokeDasharray  = len;
        el.style.strokeDashoffset = len;
        var dur = Math.max(1.0, len / 320);
        el.style.transition =
          'stroke-dashoffset ' + dur.toFixed(2) + 's ' +
          'cubic-bezier(0.23, 1, 0.32, 1) ' +
          (i * STEP) + 'ms';
      });

      /* Circles: just fade in with stagger */
      Array.from(svg.querySelectorAll('circle')).forEach(function (el, i) {
        el.style.transition = 'opacity 0.5s ease ' + (i * STEP * 0.6) + 'ms';
        el.style.opacity = '0';
      });

      /* Text labels: fade in after paths */
      var maxPathDelay = drawables.length * STEP;
      Array.from(svg.querySelectorAll('text')).forEach(function (el, i) {
        el.style.transition =
          'opacity 0.55s ease ' + (maxPathDelay + i * 80) + 'ms';
      });
    }

    /* ── Trigger drawing when SVG enters viewport ─────────── */
    function drawSvg(svg) {
      svg.classList.add('is-drawn');
      /* circles need explicit opacity reset (CSS class won't affect inline) */
      Array.from(svg.querySelectorAll('circle')).forEach(function (el) {
        el.style.opacity = '';
      });
      Array.from(svg.querySelectorAll('text')).forEach(function (el) {
        /* remove the !important override so transition takes over */
        el.style.opacity = '1';
      });
    }

    function init() {
      if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;

      var svgs = document.querySelectorAll('.svg-animated');
      if (!svgs.length) return;

      svgs.forEach(prepareSvg);

      var io = new IntersectionObserver(function (entries) {
        entries.forEach(function (entry) {
          if (!entry.isIntersecting) return;
          drawSvg(entry.target);
          io.unobserve(entry.target);
        });
      }, { threshold: 0.18 });

      svgs.forEach(function (svg) { io.observe(svg); });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }

    /* Re-run after Shopify section re-render in editor */
    document.addEventListener('shopify:section:load', init);
  })();
