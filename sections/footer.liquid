{% comment %}
  Footer — Dark Brutalist Luxury
{% endcomment %}

<footer class="ft full-width" role="contentinfo">

  {% comment %} ── TOP GRID ──────────────────────────────────────────────── {% endcomment %}
  <div class="ft__grid">

    {% comment %} Col 1 — Brand + tagline + established {% endcomment %}
    <div class="ft__brand">
      <a class="ft__logo" href="{{ routes.root_url }}">{{ shop.name | upcase }}</a>
      {% if section.settings.tagline != blank %}
        <p class="ft__tagline">{{ section.settings.tagline | escape }}</p>
      {% endif %}
      <p class="ft__estd">{{ section.settings.estd_text | escape }}</p>
    </div>

    {% comment %} Col 2 — Navigation {% endcomment %}
    {% if section.settings.nav_menu != blank %}
      <nav class="ft__col" aria-label="{{ 'footer.nav_aria' | t }}">
        <p class="ft__col-heading">{{ section.settings.nav_label | escape }}</p>
        {% for link in section.settings.nav_menu.links %}
          <a class="ft__link" href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </nav>
    {% endif %}

    {% comment %} Col 3 — Social (text links) {% endcomment %}
    <div class="ft__col">
      <p class="ft__col-heading">{{ section.settings.social_label | escape }}</p>
      {% if section.settings.social_instagram != blank %}
        <a class="ft__link" href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener">Instagram</a>
      {% endif %}
      {% if section.settings.social_tiktok != blank %}
        <a class="ft__link" href="{{ section.settings.social_tiktok }}" target="_blank" rel="noopener">TikTok</a>
      {% endif %}
      {% if section.settings.social_twitter != blank %}
        <a class="ft__link" href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener">X / Twitter</a>
      {% endif %}
      {% if section.settings.social_pinterest != blank %}
        <a class="ft__link" href="{{ section.settings.social_pinterest }}" target="_blank" rel="noopener">Pinterest</a>
      {% endif %}
    </div>

    {% comment %} Col 4 — Contact {% endcomment %}
    <div class="ft__col">
      <p class="ft__col-heading">{{ section.settings.contact_label | escape }}</p>
      {% if section.settings.contact_email != blank %}
        <a class="ft__link" href="mailto:{{ section.settings.contact_email | escape }}">
          {{ section.settings.contact_email | escape }}
        </a>
      {% endif %}
      {% if section.settings.contact_address != blank %}
        <p class="ft__address">{{ section.settings.contact_address | newline_to_br }}</p>
      {% endif %}
    </div>

  </div>

  {% comment %} ── BOTTOM BAR ────────────────────────────────────────────── {% endcomment %}
  <div class="ft__bar">

    <p class="ft__copy">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name | upcase | escape }}.
      {{ 'footer.rights' | t }}
    </p>

    {% comment %} Legal links {% endcomment %}
    <nav class="ft__legal-links" aria-label="{{ 'footer.legal_aria' | t }}">
      {% if section.settings.legal_menu != blank %}
        {% for link in section.settings.legal_menu.links %}
          <a class="ft__legal-link" href="{{ link.url }}">{{ link.title | upcase }}</a>
        {% endfor %}
      {% endif %}
    </nav>

  </div>

</footer>

{% stylesheet %}
  /* ── Tokens ──────────────────────────────────────────────── */
  .ft {
    --bg:    #0a0a09;
    --cream: #e6e1d6;
    --muted: rgba(230, 225, 214, 0.42);
    --line:  rgba(230, 225, 214, 0.1);
    --serif: var(--font-heading--family, "Playfair Display", Georgia, serif);
    --sans:  var(--font-body--family,    "Work Sans", system-ui, sans-serif);
  }

  /* ── Shell ───────────────────────────────────────────────── */
  .ft {
    background:  var(--bg) !important;
    color:       var(--cream);
    border-top:  1px solid var(--line);
    padding:     6rem clamp(1.5rem, 6vw, 6rem) 0;
    box-sizing:  border-box;
  }

  /* ── TOP GRID ────────────────────────────────────────────── */
  .ft__grid {
    display:               grid;
    grid-template-columns: 1.6fr 1fr 1fr 1fr;
    gap:                   3rem 4rem;
    align-items:           start;
    padding-bottom:        5rem;
  }

  /* ── Brand col ───────────────────────────────────────────── */
  .ft__logo {
    display:        block;
    font-family:    var(--serif);
    font-weight:    300;
    font-size:      clamp(1.1rem, 1.8vw, 1.5rem);
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color:          var(--cream);
    text-decoration: none;
    transition:     opacity 220ms;
    margin-bottom:  1.2rem;
  }

  .ft__logo:hover { opacity: 0.7; }

  .ft__tagline {
    font-family:  var(--sans);
    font-size:    0.72rem;
    line-height:  1.75;
    color:        var(--muted);
    max-width:    26ch;
    margin:       0 0 2rem;
  }

  .ft__estd {
    font-family:    var(--sans);
    font-size:      0.5rem;
    letter-spacing: 0.32em;
    text-transform: uppercase;
    color:          rgba(230, 225, 214, 0.22);
    margin:         0;
  }

  /* ── Generic column ──────────────────────────────────────── */
  .ft__col {
    display:        flex;
    flex-direction: column;
    gap:            0.7rem;
  }

  .ft__col-heading {
    font-family:    var(--sans);
    font-size:      0.5rem;
    letter-spacing: 0.32em;
    text-transform: uppercase;
    color:          rgba(230, 225, 214, 0.3);
    margin:         0 0 0.6rem;
  }

  /* Nav / social / contact links */
  .ft__link {
    font-family:     var(--serif);
    font-style:      italic;
    font-weight:     300;
    font-size:       0.9rem;
    line-height:     1.4;
    color:           rgba(230, 225, 214, 0.58);
    text-decoration: none;
    width:           fit-content;
    transition:      color 220ms;
  }

  .ft__link:hover { color: #fff; }

  /* Address (non-link) */
  .ft__address {
    font-family:  var(--sans);
    font-size:    0.68rem;
    line-height:  1.7;
    color:        var(--muted);
    margin:       0.2rem 0 0;
  }

  /* ── BOTTOM BAR ──────────────────────────────────────────── */
  .ft__bar {
    display:         flex;
    align-items:     center;
    justify-content: space-between;
    flex-wrap:       wrap;
    gap:             1.2rem;
    border-top:      1px solid var(--line);
    padding:         1.8rem 0 2.8rem;
  }

  .ft__copy {
    font-family:    var(--sans);
    font-size:      0.52rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color:          rgba(230, 225, 214, 0.28);
    margin:         0;
  }

  .ft__legal-links {
    display: flex;
    gap:     2.2rem;
    flex-wrap: wrap;
  }

  .ft__legal-link {
    font-family:     var(--sans);
    font-size:       0.5rem;
    letter-spacing:  0.24em;
    text-transform:  uppercase;
    color:           rgba(230, 225, 214, 0.3);
    text-decoration: none;
    transition:      color 220ms;
  }

  .ft__legal-link:hover { color: rgba(230, 225, 214, 0.75); }

  /* ── RESPONSIVE ──────────────────────────────────────────── */
  @media (max-width: 1100px) {
    .ft__grid { grid-template-columns: 1fr 1fr; }
    .ft__brand { grid-column: span 2; }
  }

  @media (max-width: 640px) {
    .ft {
      padding-top: 4rem;
      padding-left: 1.1rem;
      padding-right: 1.1rem;
    }

    .ft__grid {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem 2rem;
      padding-bottom: 3.5rem;
    }

    .ft__brand { grid-column: span 2; }

    .ft__bar {
      flex-direction: column;
      align-items:    flex-start;
      gap:            1rem;
      padding-bottom: 2rem;
    }

    .ft__legal-links { gap: 1.4rem; }
  }

  @media (max-width: 380px) {
    .ft__grid { grid-template-columns: 1fr; }
    .ft__brand { grid-column: span 1; }
  }
{% endstylesheet %}

