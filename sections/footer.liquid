<footer class="site-footer full-width">
  <div class="site-footer__inner">
    <div class="site-footer__brand">
      <a class="site-footer__logo" href="{{ routes.root_url }}">{{ shop.name }}</a>
      <p class="site-footer__tagline">{{ 'footer.tagline' | t }}</p>
    </div>

    <nav class="site-footer__nav" aria-label="{{ 'footer.nav_aria' | t }}">
      {% for link in section.settings.menu.links %}
        <a class="site-footer__link" href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </nav>

    <div class="site-footer__legal">
      <p class="site-footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name | escape }}
      </p>

      {% if section.settings.show_payment_icons %}
        <div class="site-footer__payment">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag }}
          {% endfor %}
        </div>
      {% endif %}

      <p class="site-footer__powered">{{ powered_by_link }}</p>
    </div>
  </div>
</footer>

{% stylesheet %}
  .site-footer {
    background: #0f0f0e;
    color: rgba(240, 237, 229, 0.85);
    padding-block: 5rem 3rem;
  }

  .site-footer__inner {
    display: grid;
    grid-template-columns: 1.4fr 1fr 1fr;
    align-items: start;
    gap: 3rem;
    max-width: var(--page-width, 90rem);
    margin-inline: auto;
    padding-inline: clamp(1.5rem, 4vw, 4rem);
  }

  .site-footer__logo {
    display: inline-block;
    font-family: var(--font-heading--family, Georgia, serif);
    font-size: 1.3rem;
    font-weight: 400;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(240, 237, 229, 0.95);
    text-decoration: none;
  }

  .site-footer__tagline {
    margin-top: 0.75rem;
    font-family: var(--font-body--family, system-ui);
    font-size: 0.72rem;
    letter-spacing: 0.08em;
    color: rgba(240, 237, 229, 0.45);
    max-width: 28ch;
    line-height: 1.7;
  }

  .site-footer__nav {
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
    padding-top: 0.2rem;
  }

  .site-footer__link {
    font-family: var(--font-body--family, system-ui);
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    text-decoration: none;
    color: rgba(240, 237, 229, 0.55);
    transition: color 200ms ease;
    width: fit-content;
  }

  .site-footer__link:hover {
    color: rgba(240, 237, 229, 0.95);
  }

  .site-footer__legal {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1rem;
    padding-top: 0.2rem;
  }

  .site-footer__copyright,
  .site-footer__powered {
    font-family: var(--font-body--family, system-ui);
    font-size: 0.65rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(240, 237, 229, 0.35);
  }

  .site-footer__powered a {
    color: rgba(240, 237, 229, 0.35);
    text-decoration: none;
    border-bottom: 1px solid rgba(240, 237, 229, 0.2);
    transition: border-color 200ms ease;
  }

  .site-footer__powered a:hover {
    border-color: rgba(240, 237, 229, 0.6);
  }

  .site-footer__payment {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: flex-end;
    opacity: 0.45;
  }

  .site-footer__payment svg {
    height: 1.4rem;
    width: auto;
  }

  @media (max-width: 840px) {
    .site-footer__inner {
      grid-template-columns: 1fr 1fr;
    }

    .site-footer__brand {
      grid-column: span 2;
    }
  }

  @media (max-width: 560px) {
    .site-footer__inner {
      grid-template-columns: 1fr;
    }

    .site-footer__brand {
      grid-column: span 1;
    }

    .site-footer__legal {
      align-items: flex-start;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
